section.who-we-are
  .team
    .team-avatars
      display flex
      flex-flow row wrap
      justify-content center

      .avatar
        position relative
        padding 10px 10px
        text-align left
        width 290px
        height 450px
        margin-bottom 10px
        border-radius 3px

        .picture
          img
            height 290px
            border-radius 3px 3px 0 0

        .content
          position absolute
          top 300px
          padding 10px 15px
          width 260px
          height 160px
          border-radius 0 3px
          background-color white
          transition all 0.5s ease

          .bio
            opacity 0
            visibility hidden
            transition opacity 0.5s ease

          .social
            position absolute
            bottom 15px
            margin-left -5px

            a
              color darkgrey
              &:hover
                color black
                text-decoration none
              span
                position relative
                font-size 22px
                margin-left 0px

        &:hover
          .content
            top 10px
            height 450px

            .bio
              opacity 1
              visibility visible