section.section.proyectos
  background bg-color-2
  background-size 110%
  min-height 400px

  .proyectos-content

    .proyectos-item
      position relative
      min-width 250px
      max-width 300px
      padding 1px 1px

  .projects
    display flex
    flex-flow row wrap
    justify-content center
    text-align center
    max-width 1100px
    margin auto

    .project-card
      height 200px
      padding 7px 7px
      transition all default-duration ease

      .expand
        position relative

      .description-overlay
        position absolute
        top auto
        left 0
        min-width 100%
        height 0
        background-color bg-color-1
        overflow hidden
        transition all default-duration ease

        .screenshots
          width 50%
          height 100%
          float left

          img
            position relative
            width 90%
            padding 40px 20px

        .text
          width 50%
          float right
          text-align left

          p
            padding-top 20px
            padding-bottom 20px
            padding-right 40px

          .links
            .btn
              margin-right 10px

        /* Screenshots won't be shown on small screen */
        @media screen and (max-width: 780px)
          .screenshots
            display none
          .text
            width 100%
            & > *
              padding-left 20px

        .close
          float right
          font-size 40px
          padding 10px 10px

      /* When the description is expanded */
      &.expanded
        height 605px

        /* Show the arrow /\ on top of the description div */
        .expand:after
          top auto
          border solid transparent
          content " "
          height 0
          width 0
          position absolute
          pointer-events none
          border-bottom-color bg-color-1
          border-width 15px
          left 50%
          margin -20px 0 0 -15px
          bottom -92px

        .description-overlay
          height 400px
