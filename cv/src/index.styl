div
  &.inline
    float left

div, span
  &.hide
    display none

code
  font-family: 'Roboto Mono'

body
  font-family 'Roboto'
  line-height 1.8em
  max-width 700px
  margin 2em auto

  header
    padding 20px 0
    text-align left
    *
      margin 0

    h1
      margin-bottom 10px
      font-weight 100

    h2
      text-transform uppercase
      font-weight 100
      letter-spacing 0.4em
      font-size 19px
      margin-bottom 15px

  article
    ul
      &.clean
        padding 0
        li
          list-style-type none
      &.bulleted
        margin 16px 0
        padding-left 40px
        li
          list-style-type disc

    .pic
      float right
      max-width 100px
      border-radius 4%

    section
      padding 10px 0

      &.experience
        ul.clean
          li
            .name
              h3
                margin-bottom 0
            .description
              p
                margin 10px 0 0 0
